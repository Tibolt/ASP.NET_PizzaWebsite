@page
@model Razor_PizzaWeb.Pages.Admin.ShowOrdersModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1>Orders</h1>
    </div>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Pizza name</th>
                <th scope="col">Prize</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var order in Model.OrderList)
            {
                <tr>
                    <td width="30%">@order.Id</td>
                    <td width="30%">@order.PizzaName</td>
                    <td width="30%">@order.FinalPrize</td>
                    <td width="30%">@order.Address</td>
                    <td width="30%">@order.Number</td>
                    <td witdh="30%">
                        <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@order.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

