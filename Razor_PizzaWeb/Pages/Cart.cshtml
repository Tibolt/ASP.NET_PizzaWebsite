@page
@model Razor_PizzaWeb.Pages.CartModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1>Your cart</h1>
    </div>
</div>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Pizza name</th>
                <th scope="col">Prize</th>
                <th scope="col">Toppings</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.PizzaName </th>
                <td>@Model.FinalPrize$</td>
                <td>@Model.Toppings</td>
            </tr>
        </tbody>
    </table>
    <div>
        <form method="post">
              <div class="mb-3">
                <label asp-for="Order.Address" class="form-label">Address</label>
                <input type="text" asp-for="Order.Address" class="form-control" placeholder="Type your address for order">
                <span asp-validation-for="Order.Address" class="text-danger"></span>
              </div>
              <div class="mb-3">
                <label asp-for="Order.Number" class="form-label">Phone Number</label>
                <input type="tel" asp-for="Order.Number" class="form-control" placeholder="Type your phone number: 123456789">
                <span asp-validation-for="Order.Number" class="text-danger"></span>
              </div>
              <button type="sumbit" class="btn btn-primary">Checkout!</button>
        </form>
    </div>
</div>


<!-- Client-Side Validation -->
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}
