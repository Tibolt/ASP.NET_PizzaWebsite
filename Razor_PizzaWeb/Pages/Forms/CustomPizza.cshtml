@page
@model Razor_PizzaWeb.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h5>Assembly Your Pizza!</h5>
    <h4>test</h4>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pb-5 rounded-5 bg-light">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="mb-3">
            <label asp-for="Pizza.PizzaName" class="form-label"></label>
            <input type="text" asp-for="Pizza.PizzaName" class="form-control" placeholder="Type name for your pizza!"/>
            <span asp-validation-for="Pizza.PizzaName" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.TomatoSauce" class="form-check-input"/>
            <label class="form-check-label" asp-for="Pizza.TomatoSauce"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Cheese" class="form-check-input"/>
            <label class="form-check-label" asp-for="Pizza.Cheese"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.SalamiPeperoni" class="form-check-input"/>
            <label class="form-check-label" asp-for="Pizza.SalamiPeperoni"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Ham" class="form-check-input"/>
            <label class="form-check-label" asp-for="Pizza.Ham"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Mushroom" class="form-check-input"/>
            <label class="form-check-label" asp-for="Pizza.Mushroom"></label>
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="Pizza.Tuna" class="form-check-input"/>
            <label class="form-check-label" asp-for="Pizza.Tuna"></label>
        </div>


        <button type="submit" class="btn btn-primary mt-1">Sumbit</button>
    </form>
</div>


<!-- Client-Side Validation -->
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}